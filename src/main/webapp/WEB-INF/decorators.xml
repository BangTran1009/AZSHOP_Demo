<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="vendor" page="vendor.jsp">
        <pattern>/vendor*</pattern>
    </decorator>

    <decorator name="trang-chu" page="user-home.jsp">
        <pattern>/trang-chu</pattern>
    </decorator>

    <decorator name="login" page="user-login.jsp">
        <pattern>/login</pattern>
    </decorator>

    <decorator name="user" page="user.jsp">
        <pattern>/*</pattern>
    </decorator>

    <excludes>
        <pattern>/api*</pattern>
    </excludes>
</decorators>